{
  "name": "imagetabs",
  "version": "1.0.1",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "activeTab",
    "history",
    "<all_urls>",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_icon": "16x16.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "imagetabs@example.com",
      "strict_min_version": "57.0",
      "update_url": "https://raw.githubusercontent.com/softmix/imagetabs/master/updates.json"
    }
  }
}
